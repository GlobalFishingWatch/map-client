      "id": "background",
      "type": "background",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "background-color": "#001436"
      }
    },
    {
      "id": "satellite",
      "type": "raster",
      "source": "satellite",
      "layout": {
        "visibility": "visible"
      }
    },
    {
      "id": "north-star",
      "type": "raster",
      "source": "north-star",
      "layout": {
        "visibility": "none"
