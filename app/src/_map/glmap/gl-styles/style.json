    },
    {
      "id": "bathymetry",
      "type": "fill",
      "source": "bathymetry",
      "source-layer": "bathymetry",
      "layout": {
          "visibility": "none"
      },
      "paint": {
          "fill-color": [
              "step",
              [
                  "get",
                  "depth"
              ],
              "#1e346c",
              1000,
              "#1a2f63",
              2000,
              "#142655",
              3000,
              "#101f4a",
              4000,
