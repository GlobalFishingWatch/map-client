    {
      "id": "graticules-lines",
      "type": "line",
      "source": "graticules",
      "source-layer": "graticules",
      "filter": [
          "==",
          "$type",
          "LineString"
      ],
      "layout": {
          "visibility": "none"
      },
      "paint": {
          "line-color": "#174084",
          "line-opacity": {
              "base": 1,
              "stops": [
                  [
                      0,
                      0.7
                  ],
                  [
                      8,
                      0.7
                  ],
                  [
                      9,
                      0.2
                  ]
              ]
          },
          "line-width": 0.5
      }
